<header class="p-3 mb-3 border-bottom">
  <div class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <%= link_to root_path, class: 'd-flex align-items-center mb-2 mb-lg-0 text-dark text-decoration-none' do %>
        <%= icon('fas', 'flag') %>
      <% end %>

      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
        <li><%= link_to 'Map', '#', class: 'nav-link px-2 link-dark' %></li>
        <li>
          <%= link_to 'ルート一覧', '#', class: 'nav-link px-2 link-dark' %>
        </li>
      </ul>

      <div class="col-md-3 text-end">
        <%= link_to login_path, class: 'btn btn-outline-primary me-2' do %>
          <%= t('defaults.login') %>
        <% end %>
        <%= link_to new_user_path, class: 'btn btn-primary' do %>
          <%= t('defaults.sign_up') %>
        <% end %>
      </div>
    </div>
  </div>
</header>
