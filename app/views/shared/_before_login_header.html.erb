<header class="p-3 mb-3 border-bottom">
  <div class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <%= link_to root_path, class: 'd-flex align-items-center mb-2 mb-lg-0 text-dark text-decoration-none' do %>
        <%= icon('fas', 'flag') %>
      <% end %>
      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
        <li><%= link_to 'Map', '#', class: 'nav-link px-2 link-dark' %></li>
        <li>
          <%= link_to 'ルート一覧', '#', class: 'nav-link px-2 link-dark' %>
        </li>
      </ul>
      <div class="col-md-3 text-end">
        <button type="button" class="btn btn-outline-primary me-2 p-0">
          <%= link_to t('defaults.login'), login_path, class: 'nav-link link-dark p-1' %>
        </button>
        <button type="button" class="btn btn-primary p-0">
          <%= link_to t('defaults.sign_up'), new_user_path, class: 'nav-link link-light p-1' %>
        </button>
      </div>
    </div>
  </div>
</header>
