<header class="p-3 border-bottom">
  <div class="container-sm">
    <div class="row align-items-center justify-content-center justify-content-lg-start">
      <ul class="nav col-4 col-lg-auto me-lg-auto mb-2 mb-md-0">
        <li><%= link_to t('defaults.map'), maps_path, class: 'nav-link px-2 link-dark' %></li>
        <li><%= link_to 'ルート一覧', routes_path, class: 'nav-link px-2 link-dark' %></li>
      </ul>

      <ul class="nav col-4 justify-content-center">
        <li>
          <%= link_to root_path, class: 'nav-link link-dark' do %>
            <%= icon('fas', 'flag') %>
            沢登り(タイトル考え中)
          <% end %>
        </li>
      </ul>

      <div class="nav col-4 justify-content-end">
        <div class="dropdown" id="dropdown-menu">
          <%= link_to '#',
                    class: "d-block link-dark text-decoration-none dropdown-toggle",
                    id: "dropdownUser1",
                    data: { 'bs-toggle':'dropdown' },
                    aria: { 'expanded':'false' } do
        %>
            <%= image_tag current_user.avatar_url, size: '32x32', class: 'rounded-circle border' %>
          <% end %>
          <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser1">
            <li><%= link_to t('defaults.profile'), profiles_path, class: 'dropdown-item' %></li>
            <li><%= link_to Favorite.model_name.human, favorite_routes_path, class: 'dropdown-item' %></li>
            <li><hr class="dropdown-divider" /></li>
            <li><%= link_to t('defaults.logout'), logout_path, method: :delete, class: 'dropdown-item' %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</header>
