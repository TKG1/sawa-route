<div class="form-login">
  <%= form_with url: login_path, local: true, id: 'login' do |f| %>
    <h1 class="h4 mb-3 fw-normal text-center">
      <%= t('.login_email') %>
    </h1>

    <div class="form-group">
      <%= f.label :email, User.human_attribute_name('email') %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password, User.human_attribute_name('password') %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <%= f.submit t('defaults.login'), class: 'w-100 btn btn-primary mt-3' %>
  <% end %>

  <div class="text-center mt-3">
    <%= link_to t('.forgot_password'), '#' %>
  </div>

  <%= render 'shared/google_login_form' %>
</div>
