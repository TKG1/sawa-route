<h1><%= t('.title') %></h1>
<%= form_with url: login_path, local: true, id: 'login' do |f| %>
  <div class="form-group">
    <%= f.label :email, User.human_attribute_name('email') %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :password, User.human_attribute_name('password') %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit t('defaults.login'), class: 'btn btn-primary mt-2' %>
  </div>
<% end %>

<p class="or my-4 mt-5 mb-5">もしくは</p>

<div class="text-center">
  <%= link_to auth_at_provider_path(:provider => :google), method: :post, class: 'btn btn-danger' do %>
    <%= icon('fab', 'google') %> Googleアカウントで登録・ログイン
  <% end %>
</div>

<div class="text-center mt-5">
  <%= link_to 'パスワードをお忘れの方はこちら', '#' %>
</div>
