<div class="container mt-4">
  <div class="row">
    <div class="col border border-bottom-0 text-center">
      <strong class="mt-1"><%= t('.title') %></strong>
    </div>
  </div>

  <%= form_with model: @user, url: profiles_path, local: true, class: "row border mb-4" do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="d-flex justify-content-end">
      <button type="button" class="btn btn-success p-0 m-3">
        <%= link_to t('profiles.show.title'), profiles_path, class: 'link-dark p-2' %>
      </button>
    </div>
    <div class="col-6">
      <%= image_tag current_user.avatar_url, size: '480x480', class: 'rounded-circle img-thumbnail ms-5 mb-5' %>
    </div>
    <div class="col-6 align-self-center">
      <div class="">
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control mb-3' %>
        </div>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control mb-3' %>
        </div>
        <div class="form-group">
          <%= f.label :avatar %>
          <%= f.file_field :avatar, class: 'form-control mb-3', accept: 'image/*' %>
          <%= f.hidden_field :avatar_cache %>
        </div>
        <%= f.submit t('defaults.update'), class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
